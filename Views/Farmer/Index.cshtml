@model IEnumerable<FarmerViewModel>
@{
    ViewData["Title"] = "All departments";
}

<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <h3 class="p-4">All Farmers</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 p-4">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Farmer</th>
                        <th scope="col">Farm</th>
                        <th scope="col">Specialty</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var farmer in Model)
                    {
                        <tr>
                            <td>@farmer.Name</td>
                            <td>@farmer.FarmName</td>
                            <td>@farmer.Specialty</td>
                            <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Farmer" asp-route-id="@farmer.FarmerId" onClick="return confirm('Are you sure you want to delete this Farmer?')">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
